<p id="notice"><%= notice %></p>

<h1>Listing Listings</h1>

<%= link_to 'New Listing', new_listing_path %>
<%= form_for_filterrific @filterrific do |f| %>

  <div>
    Location
    <%= f.select(
      :location,
      @filterrific.select_options[:location],
      { include_blank: '- Any -' }
    ) %>
     Category
    <%= f.select(
      :category,
      @filterrific.select_options[:category],
      { include_blank: '- Any -' }
    ) %>
     Room nums
    <%= f.select(
      :room_nums,
      @filterrific.select_options[:room_nums],
      { include_blank: '- Any -' }
    ) %>
     Bathroom nums
    <%= f.select(
      :bathroom_nums,
      @filterrific.select_options[:bathroom_nums],
      { include_blank: '- Any -' }
    ) %>
  </div>
  <div>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
  <%# add an automated spinner to your form when the list is refreshed %>
  <%= render_filterrific_spinner %>
<% end %>

<%= render(
  partial: 'listings/list',
  locals: { listings: @listings }
) %>